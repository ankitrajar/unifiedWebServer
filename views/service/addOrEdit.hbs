<h3>{{viewTitle}}<hr></hr></h3>

    <form action="/service" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{service._id}}">
        <div class="form-group">
            <label>Service Name</label>
            <input type="text" class="form-control" name="serviceName" value="{{service.serviceName}}" placeholder="Service Name">
                        <div class="text-danger">
                {{service.serviceNameError}}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
            <a href="/service/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i> View All
            </a>
            <a href="/" class="btn btn-danger"> Logout </a>
        </div>
    </form>
