<style>
h3 {
    font-family: Arial, Helvetica, sans-serif;
	font-size: 30px;
    text-align: center;
}
</style>
<h3>{{viewTitle}}<hr></hr></h3>
    <form action="/login" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{login._id}}">
        <div class="form-group">
            <label>User Name</label>
            <input type="text" class="form-control" name="userName" value="{{login.userName}}" placeholder="User Name">
                        <div class="text-danger">
                {{login.userNameError}}
            </div>
        </div>
              <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="adminPassword" value="{{login.adminPassword}}" placeholder="Password">
                        <div class="text-danger">
                {{login.adminPasswordError}}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">Login</button>
        </div>
    </form>
