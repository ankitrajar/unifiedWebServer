<style>
h3 {
    font-family: Arial, Helvetica, sans-serif;
	font-size: 30px;
    text-align: center;
}
</style>
<h3>{{viewTitle}}<hr></hr></h3>
    <form action="/admin/register" method="POST" autocomplete="off">
        <div class="form-group">
            <label>User Name</label>
            <input type="text" class="form-control" name="username" value="{{login.username}}" placeholder="User Name">
                        <div class="text-danger">
                {{login.usernameError}}
            </div>
        </div>

         <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" value="{{login.email}}" placeholder="Email">
                        <div class="text-danger">
                {{login.adminemailError}}
            </div>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" value="{{login.password}}" placeholder="Password">
                        <div class="text-danger">
                {{login.adminpasswordError}}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    </form>